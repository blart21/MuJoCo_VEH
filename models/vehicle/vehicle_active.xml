<mujoco model="ioniq5_vehicle">
  <compiler inertiafromgeom="true"/>
  <option timestep="0.002" gravity="0 0 -9.81"/>

  <asset>
    <texture name="grid" type="2d" builtin="checker"
             rgb1="0.2 0.3 0.4" rgb2="0.8 0.8 0.8" width="512" height="512"/>
    <material name="grid_mat" texture="grid" texrepeat="5 5"
              specular="0.3" shininess="0.3"/>
    <texture name="wheel_pattern" type="cube" builtin="checker"
             rgb1="1 1 1" rgb2="0 0 0" width="64" height="64"/>
    <material name="wheel_mat" texture="wheel_pattern" texrepeat="10 2" texuniform="true"
              specular="0.4" shininess="0.3" reflectance="0.05"/>
  </asset>

  <!-- 차체-서스펜션 충돌 무시 -->
  <contact>
    <exclude body1="fl_susp" body2="chassis"/>
    <exclude body1="fr_susp" body2="chassis"/>
    <exclude body1="rl_susp" body2="chassis"/>
    <exclude body1="rr_susp" body2="chassis"/>
  </contact>

  <worldbody>
    <!-- 차체 중심 높이: 약 1.0025 m -->
    <body name="chassis" pos="0 0 1.0025">
      <inertial pos="0.45 0 -0.65" mass="1782" diaginertia="750 3500 3800"/>
      <joint name="root" type="free" damping="8"/>

      <!-- 차체 실제 크기 -->
      <geom name="chassis_geom" type="box"
            size="2.3275 0.945 0.8025"
            rgba="1 0 0 1"
            contype="0" conaffinity="0"/>

      <site name="lidar_high" pos="0 0 1.60" euler="0 0 0" size="0.01" rgba="1 0 0 1"/>
      <site name="lidar_low"  pos="2.10 0 0.55" euler="0 0 0" size="0.01" rgba="0 0 1 1"/>

      <!-- 앞왼쪽 -->
      <body name="fl_susp" pos=" 1.50  0.82  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="fl_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2000" stiffness="55000" springref="0.0"/>
        <!-- 휠 중심 -0.765 -->
        <body name="front_left_wheel" pos="0 0 -0.765">
          <joint name="steer_fl" type="hinge" axis="0 0 -1" range="-0.6 0.6" damping="5"/>
          <joint name="fl_wheel" type="hinge" axis="0 1 0" damping="3.0"/>
          <geom name="fl_geom" type="cylinder" size="0.37 0.1275"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                contype="1" conaffinity="1"
                friction="1.3 0.5 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>

      <!-- 앞오른쪽 -->
      <body name="fr_susp" pos=" 1.50 -0.82  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="fr_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2000" stiffness="55000" springref="0.0"/>
        <body name="front_right_wheel" pos="0 0 -0.765">
          <joint name="steer_fr" type="hinge" axis="0 0 -1" range="-0.6 0.6" damping="5"/>
          <joint name="fr_wheel" type="hinge" axis="0 1 0" damping="3.0"/>
          <geom name="fr_geom" type="cylinder" size="0.37 0.1275"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                contype="1" conaffinity="1"
                friction="1.3 0.5 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>

      <!-- 뒤왼쪽 -->
      <body name="rl_susp" pos="-1.50  0.82  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="rl_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2600" stiffness="52000" springref="0.0"/>
        <body name="rear_left_wheel" pos="0 0 -0.765">
          <joint name="rl_wheel" type="hinge" axis="0 1 0" damping="3.0"/>
          <geom name="rl_geom" type="cylinder" size="0.37 0.1275"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                contype="1" conaffinity="1"
                friction="1.3 0.5 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>

      <!-- 뒤오른쪽 -->
      <body name="rr_susp" pos="-1.50 -0.82  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="rr_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2600" stiffness="52000" springref="0.0"/>
        <body name="rear_right_wheel" pos="0 0 -0.765">
          <joint name="rr_wheel" type="hinge" axis="0 1 0" damping="3.0"/>
          <geom name="rr_geom" type="cylinder" size="0.37 0.1275"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                contype="1" conaffinity="1"
                friction="1.3 0.5 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>
    </body>

    <!-- (기타 worldbody 안의 요소가 더 있다면 여기 계속) -->

  </worldbody>

  <actuator>
    <motor name="fl_motor" joint="fl_wheel" ctrlrange="-10000 10000" gear="5.0"/>
    <motor name="fr_motor" joint="fr_wheel" ctrlrange="-10000 10000" gear="5.0"/>
    <motor name="rl_motor" joint="rl_wheel" ctrlrange="-10000 10000" gear="5.0"/>
    <motor name="rr_motor" joint="rr_wheel" ctrlrange="-10000 10000" gear="5.0"/>

    <motor name="fl_act" joint="fl_suspension" gear="1.0" ctrlrange="-12000 12000"/>
    <motor name="fr_act" joint="fr_suspension" gear="1.0" ctrlrange="-12000 12000"/>
    <motor name="rl_act" joint="rl_suspension" gear="1.0" ctrlrange="-12000 12000"/>
    <motor name="rr_act" joint="rr_suspension" gear="1.0" ctrlrange="-12000 12000"/>

    <position name="steer_fl_pos" joint="steer_fl" kp="4000" ctrlrange="-0.6 0.6"/>
    <position name="steer_fr_pos" joint="steer_fr" kp="4000" ctrlrange="-0.6 0.6"/>
  </actuator>
</mujoco>
