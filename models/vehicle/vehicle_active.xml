<mujoco model="vehicle_active">
  <compiler inertiafromgeom="true"/>
  <option timestep="0.002" gravity="0 0 -9.81"/>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.8 0.8 0.8" width="512" height="512"/>
    <material name="grid_mat" texture="grid" texrepeat="5 5" specular="0.3" shininess="0.3"/>
    <texture name="wheel_pattern" type="cube" builtin="checker" rgb1="1 1 1" rgb2="0 0 0" width="64" height="64"/>
    <material name="wheel_mat" texture="wheel_pattern" texrepeat="10 2" texuniform="true"
              specular="0.4" shininess="0.3" reflectance="0.05"/>
  </asset>

  <contact>
    <!-- 충돌 무시(차체-서스펜션/휠 붙여 배치 가능) -->
    <exclude body1="fl_susp" body2="chassis"/>
    <exclude body1="fr_susp" body2="chassis"/>
    <exclude body1="rl_susp" body2="chassis"/>
    <exclude body1="rr_susp" body2="chassis"/>
    <exclude body1="front_left_wheel"  body2="chassis"/>
    <exclude body1="front_right_wheel" body2="chassis"/>
    <exclude body1="rear_left_wheel"   body2="chassis"/>
    <exclude body1="rear_right_wheel"  body2="chassis"/>
  </contact>

  <worldbody>
    <body name="chassis" pos="0 0 0.86">
      <inertial pos="0.15 0 -0.06" mass="1800" diaginertia="600 3600 1200"/>
      <!-- [2] 루트 감쇠 추가 -->
      <joint name="root" type="free" damping="8"/>

      <geom name="chassis_geom" type="box" size="2.35 0.94 0.72" rgba="1 0 0 1"/>

      <site name="lidar_high" pos="0 0 1.50" euler="0 0 0" size="0.01" rgba="1 0 0 1"/>
      <site name="lidar_low"  pos="2.10 0 0.55" euler="0 0 0" size="0.01" rgba="0 0 1 1"/>

      <!-- Front Left Suspension & Wheel -->
      <body name="fl_susp" pos=" 1.40  1.06  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <!-- 스프링/댐핑 유지 -->
        <joint name="fl_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2000" stiffness="55000" springref="0.0"/>
        <body name="front_left_wheel" pos="0 0 -0.53">
          <joint name="steer_fl" type="hinge" axis="0 0 -1" range="-1.5 1.5" damping="5"/>
          <joint name="fl_wheel" type="hinge" axis="0 1 0" damping="0.1"/>
          <!-- [3] 휠 접촉 완화: 마찰/solref/solimp 보강 -->
          <geom name="fl_geom" type="cylinder" size="0.33 0.10"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                friction="1.2 0.4 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>

      <!-- Front Right Suspension & Wheel -->
      <body name="fr_susp" pos=" 1.40 -1.06  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="fr_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2000" stiffness="55000" springref="0.0"/>
        <body name="front_right_wheel" pos="0 0 -0.53">
          <joint name="steer_fr" type="hinge" axis="0 0 -1" range="-1.5 1.5" damping="5"/>
          <joint name="fr_wheel" type="hinge" axis="0 1 0" damping="0.1"/>
          <geom name="fr_geom" type="cylinder" size="0.33 0.10"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                friction="1.2 0.4 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>

      <!-- Rear Left Suspension & Wheel -->
      <body name="rl_susp" pos="-1.40  1.06  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="rl_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2600" stiffness="52000" springref="0.0"/>
        <body name="rear_left_wheel" pos="0 0 -0.53">
          <joint name="rl_wheel" type="hinge" axis="0 1 0" damping="0.1"/>
          <geom name="rl_geom" type="cylinder" size="0.33 0.10"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                friction="1.2 0.4 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>

      <!-- Rear Right Suspension & Wheel -->
      <body name="rr_susp" pos="-1.40 -1.06  0.00">
        <inertial pos="0 0 0" mass="25" diaginertia="0.3 0.3 0.3"/>
        <joint name="rr_suspension" type="slide" axis="0 0 1"
               range="-0.10 0.10" damping="2600" stiffness="52000" springref="0.0"/>
        <body name="rear_right_wheel" pos="0 0 -0.53">
          <joint name="rr_wheel" type="hinge" axis="0 1 0" damping="0.1"/>
          <geom name="rr_geom" type="cylinder" size="0.33 0.10"
                euler="90 0 0" material="wheel_mat"
                mass="35"
                friction="1.2 0.4 0.04"
                solref="0.005 1" solimp="0.9 0.95 0.001"/>
        </body>
      </body>
    </body>
  </worldbody>

  <sensor>
    <framepos name="lidar_low_pos"  objtype="site" objname="lidar_low"/>
    <framepos name="lidar_high_pos" objtype="site" objname="lidar_high"/>
  </sensor>

  <actuator>
    <!-- 바퀴 구동 -->
    <motor name="fl_motor" joint="fl_wheel" ctrlrange="-10000 10000" gear="5.0"/>
    <motor name="fr_motor" joint="fr_wheel" ctrlrange="-10000 10000" gear="5.0"/>
    <motor name="rl_motor" joint="rl_wheel" ctrlrange="-10000 10000" gear="5.0"/>
    <motor name="rr_motor" joint="rr_wheel" ctrlrange="-10000 10000" gear="5.0"/>

    <!-- 서스펜션(능동 제어 쓰려면 여기로 PD 주입 가능) -->
    <motor name="fl_act" joint="fl_suspension" gear="1.0" ctrlrange="-12000 12000"/>
    <motor name="fr_act" joint="fr_suspension" gear="1.0" ctrlrange="-12000 12000"/>
    <motor name="rl_act" joint="rl_suspension" gear="1.0" ctrlrange="-12000 12000"/>
    <motor name="rr_act" joint="rr_suspension" gear="1.0" ctrlrange="-12000 12000"/>

    <!-- 조향: 포지션 서보(목표 각도 제어) -->
    <position name="steer_fl_pos" joint="steer_fl" kp="4000" ctrlrange="-0.8 0.8"/>
    <position name="steer_fr_pos" joint="steer_fr" kp="4000" ctrlrange="-0.8 0.8"/>
  </actuator>
</mujoco>
