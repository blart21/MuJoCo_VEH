<mujoco model="vehicle_static">
  <compiler inertiafromgeom="true"/>
  <option timestep="0.002" gravity="0 0 -9.81"/>

  <asset>
    <texture name="wheel_pattern" type="cube" builtin="checker"
             rgb1="1 1 1" rgb2="0 0 0" width="64" height="64"/>
    <material name="wheel_mat" texture="wheel_pattern"
              texrepeat="10 2" texuniform="true"
              specular="0.4" shininess="0.3" reflectance="0.05"/>
  </asset>

  <worldbody>

    <!-- ========================================================= -->
    <!-- ================ CASE 1 : STATIC VEHICLE ================= -->
    <!-- ========================================================= -->

    <body name="static_car" pos="60 0 1.0025">
      <!-- 차체 크기 수정 -->
      <geom type="box" size="2.3275 0.945 0.8025" rgba="0 0 1 1"/>

      <!-- 앞왼쪽 -->
      <geom type="cylinder" size="0.37 0.1275" pos=" 1.50  0.82 -0.765" euler="90 0 0" material="wheel_mat"/>

      <!-- 앞오른쪽 -->
      <geom type="cylinder" size="0.37 0.1275" pos=" 1.50 -0.82 -0.765" euler="90 0 0" material="wheel_mat"/>

      <!-- 뒤왼쪽 -->
      <geom type="cylinder" size="0.37 0.1275" pos="-1.50  0.82 -0.765" euler="90 0 0" material="wheel_mat"/>

      <!-- 뒤오른쪽 -->
      <geom type="cylinder" size="0.37 0.1275" pos="-1.50 -0.82 -0.765" euler="90 0 0" material="wheel_mat"/>

    </body>

  </worldbody>

</mujoco>
